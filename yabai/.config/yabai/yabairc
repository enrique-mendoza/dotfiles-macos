#!/usr/bin/env sh

#   ██╗   ██╗ █████╗ ██████╗  █████╗ ██╗
#   ╚██╗ ██╔╝██╔══██╗██╔══██╗██╔══██╗██║
#    ╚████╔╝ ███████║██████╔╝███████║██║
#     ╚██╔╝  ██╔══██║██╔══██╗██╔══██║██║
#      ██║   ██║  ██║██████╔╝██║  ██║██║
#      ╚═╝   ╚═╝  ╚═╝╚═════╝ ╚═╝  ╚═╝╚═╝
#

# for this to work you must configure sudo such that
# it will be able to run the command without password

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# global settings
yabai -m config active_window_border_color 0xff008bff
yabai -m config active_window_opacity 1.0

yabai -m config auto_balance off

yabai -m config normal_window_border_color 0x01000000
yabai -m config normal_window_opacity 0.94

yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m config mouse_follows_focus on
yabai -m config mouse_modifier alt
yabai -m mouse_drop_action swap

yabai -m config split_ratio 0.50

yabai -m config window_animation_duration 0.0
yabai -m config window_border off
yabai -m config window_opacity on
yabai -m config window_placement second_child
yabai -m config window_shadow on
yabai -m config window_topmost off

# general space settings
yabai -m config layout bsp

# can use Übersicht to create custom status bars
yabai -m config external_bar main:0:0

yabai -m config top_padding 8
yabai -m config right_padding 8
yabai -m config bottom_padding 8
yabai -m config left_padding 8

yabai -m config window_gap 8

# space 1: terminals
yabai -m rule --add app="iTerm2" space=^1
yabai -m rule --add app="kitty" space=^1

# space 2: development
yabai -m rule --add app="IntelliJ IDEA.*" space=^2
yabai -m rule --add app="IntelliJ IDEA.*" title="Preferences" space=^2 manage=off
yabai -m rule --add app="Visual Studio Code.*" space=^2
yabai -m rule --add app="Visual Studio Code.*" title="Preferences" space=^2 manage=off

# space 3: web
yabai -m rule --add app="Google Chrome" space=^3

# things which create floating children
yabai -m rule --add app="AlDente" manage=off
yabai -m rule --add app="Finder" manage=off
yabai -m rule --add app="System Settings" manage=off

# dbeaver
yabai -m rule --add title="Connect to a database" manage=off
yabai -m rule --add title="Connection test" manage=off
yabai -m rule --add title="Driver settings" manage=off

# idea
yabai -m rule --add title="JetBrains Toolbox" manage=off mouse_follows_focus=off
yabai -m rule --add title="New Project" manage=off
yabai -m rule --add title="Project Structure" manage=off
yabai -m rule --add title="Preferences" manage=off
yabai -m rule --add title="Rename" manage=off
yabai -m rule --add title="Settings" manage=off
yabai -m rule --add title="Welcome to IntelliJ IDEA" manage=off
